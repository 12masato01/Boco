<%= provide(:title, "回答の編集") %>

<div class="container" id="users_registrations_new">
  <h2>回答の編集</h2>
  <%= form_with model: @answer do |f| %>
  <div class="field">
    <%= f.text_field :title, placeholder: " 回答のタイトル"%>
  </div>
  <div class="field">
    <%= f.text_area :content, placeholder: " 回答の内容"%>
  </div>
  <div class="field">
    <%= f.submit "編集する", class: "btn btn-info" %>
  </div>
  <% end %>
</div>