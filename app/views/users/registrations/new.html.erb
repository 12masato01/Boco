<%= provide(:title, "会員登録") %>

<div class="container" id="users_registrations_new">
<div class="btn-facebook">
<%= link_to"facebookでログイン", "#", class: "btn" %>
</div>
<div class="btn-test">
<%= link_to"テストログイン", "#", class: "btn" %>
</div>
<p>-----------------------------------または-----------------------------------</p>
<h2>会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: " Email"%>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: " Password 6文字以上入力してください" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: " Passwordの確認" %>
  </div>

  <br>

  <div class="field">
    <%= f.submit "登録する", class: "btn btn-info" %>
  </div>
<% end %>
</div>
