<%= provide(:title, "ログイン") %>

<div class="container" id="users_registrations_new">
  <div class="btn-facebook">
    <%= link_to"facebookでログイン", "#", class: "btn" %>
  </div>
  <div class="btn-test">
    <%= link_to"ゲストログイン（採用担当者様）", users_guest_sign_in_path, method: :post, class: "btn" %>
  </div>
  <p>-----------------------------------または-----------------------------------</p>
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email",  placeholder: " Email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password",  placeholder: " Password 6文字以上入力してください" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="check_box">
        <%= f.check_box :remember_me %>
        <%= f.label :"次回以降自動でログインする"%>
      </div>
    <% end %>

    <div class="field">
      <%= f.submit "ログイン", class: "btn btn-info" %>
    </div>
  <% end %>
</div>