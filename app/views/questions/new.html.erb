<%= provide(:title, "新規質問") %>

<div class="container" id="users_registrations_new">
  <h2>新規質問</h2>
  <%= form_with model:@question, local: true do |f| %>
  <%= render "shared/error_message", model: f.object%>
    <div class="field">
      <%= f.text_field :title, placeholder: " 質問のタイトル"%>
    </div>
    <div class="field">
      <%= f.text_area :content, placeholder: " 質問の内容"%>
    </div>
    <div class="field">
      <%= f.submit "質問する", class: "btn btn-info" %>
    </div>
    <div class="field">
    <%= f.file_field :image %>
    </div>
  <% end %>
</div>
