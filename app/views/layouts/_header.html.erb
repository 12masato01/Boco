<header class="bg-light">
   <div class="container">
      <nav class="navbar navbar-expand-md sticky-top">
        <div class="collapse navbar-collapse justify-content-start" id="navbarsExampleDefault">
            <%= link_to("Boco", root_path, {class: "h3 text-info mr-2"}) %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <%= link_to("質問する", new_question_path, {class: "btn btn-info mr-2"}) %>
            <ul class="nav nav-tabs">
                <li class=" nav-item">
                    <%= link_to("質問一覧", questions_path, class: "nav-link text-info") %>
                </li>
                <li class="nav-item">
                    <%= link_to("気になっている質問", user_favorite_path, {class: "nav-link text-info"}) %>
                </li>
                <li class="nav-item">
                    <%= link_to("自分の質問", user_question_path, {class: "nav-link text-info"}) %>
                </li>
            </ul>
        </div>
        <div class="collapse navbar-collapse justify-content-end" id="navbarsExampleDefault">
          <%= search_form_for @q, url: questions_path do |f| %>
            <%= f.search_field :title_cont, placeholder: "キーワードを入力", class: "search mr-sm-2"%>
            <%= f.submit "みんなの質問を検索", class: "btn btn-outline-info mr-2 my-2 my-sm-0"%>
          <% end %>
          <%= link_to("マイページ", edit_user_registration_path, {class: "btn btn-info mr-2"}) %>
        </div>
    </nav>
  </div>
</header>